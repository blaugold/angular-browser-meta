{
  "name": "@blaugold/angular-firebase",
  "version": "0.0.0-alpha.0-2",
  "description": "Wrapper around Firebase JS-API for Angular 2 Apps.",
  "keywords": [
    "Firebase",
    "Angular 2",
    "Observable",
    "RxJS"
  ],
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "postinstall": "cpy karma-remap-istanbul-fix/index.js node_modules/karma-remap-istanbul",
    "karma": "karma start",
    "test": "npm run karma -- --single-run",
    "copy": "cpy package.json README.md release",
    "ngc": "ngc -p aot.tsconfig.json",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf src/**/*.ngfactory.ts",
    "prebuild": "npm run clean:pre",
    "build": "npm run ngc",
    "postbuild": "npm run copy && npm run clean:post"
  },
  "author": "Gabriel Terwesten <gabriel@terwesten.net>",
  "license": "MIT",
  "dependencies": {
    "firebase": "^3.5.3"
  },
  "peerDependencies": {
    "@angular/core": "^2.1.2",
    "rxjs": "5.0.0-beta.12"
  },
  "optionalDependencies": {
    "@blaugold/angular-logger": "^0.0.0-beta.0"
  },
  "devDependencies": {
    "@angular/common": "^2.1.2",
    "@angular/compiler": "^2.1.2",
    "@angular/compiler-cli": "^2.1.2",
    "@angular/core": "^2.1.2",
    "@angular/platform-browser": "^2.1.2",
    "@angular/platform-browser-dynamic": "^2.1.2",
    "@angular/platform-server": "^2.1.2",
    "@blaugold/angular-logger": "0.0.0-beta.0-0",
    "@types/jasmine": "^2.5.37",
    "@types/node": "^6.0.46",
    "awesome-typescript-loader": "^2.2.4",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.2.0",
    "karma-remap-istanbul": "^0.2.1",
    "karma-webpack": "^1.8.0",
    "rimraf": "^2.5.4",
    "rxjs": "5.0.0-beta.12",
    "typescript": "^2.0.6",
    "webpack": "^2.1.0-beta.25",
    "zone.js": "^0.6.26"
  }
